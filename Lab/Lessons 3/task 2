#include <stdio.h>
int dimoon(){
    int a,b;
    int n = a;
    // пока n не кратно ни a, ни b
    while (n % a != 0 || n % b != 0) 
    {
        n++;  // Увеличиваем n на 1
    }
    return n;
}

int main() {
    int a, b;
    printf("Введите значение a: ");
    scanf("%d", &a);
    printf("Введите значение b: ");
    scanf("%d", &b);

    // Проверка на нулевые значения a и b
    if (a == 0 && b == 0) {
        printf("Введите другие числа. a и b не могут быть равны 0!\n");
        return 1;  // Завершаем программу с ошибкой
    }

    // Вызов функции и вывод результата
    int dimoon = (a, b);
    printf("Первое число, кратное a или b: %d\n", a);

    return 0;  // Завершение программы
}
