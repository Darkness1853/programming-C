//Вариант1
#include <stdio.h>
int main() {
    unsigned int n;
    printf("Перевод в двоичную запись числа и подсчёт нулевых и единичных битов.\n");
    printf("Введите целое, неотрицательное число: ");
    
    // Проверка корректности ввода
    if (scanf("%u", &n) != 1) {
        printf("Ошибка: Введите целое и неотрицательное число.\n");
        return 1;
    }

    int zero = 0;
    int one = 0;

    // Если пользователь ввел ноль
    if (n == 0) {
        zero = 1;  // Один нулевой бит
    } else {
        // Подсчет битов
        while (n > 0) {
            if (n & 1) {
                one++; // Единичный бит
            } else {
                zero++; // Нулевой бит
            }
            n >>= 1; // Сдвиг вправо
        }
    }

    // Сумма битов
    int total = one + zero;

    printf("Количество единичных битов: %d\n", one);
    printf("Количество нулевых битов: %d\n", zero);
    printf("Общее количество битов: %d\n", total);

    return 0;
}
