/*for ( int n=2; n<a; n++) 
делится ли `a` на любое число `n`, начиная с 2 и заканчивая `a-1`.
++n; увеличивает значение n до вычисления выражения
      if (a%n==0) break; если a равна n , то функция останавливается
if (n==a) puts("1");условие `if (n == a)` никогда не будет истинным, потому что `n` всегда будет меньше `a`
если n равна a то пишем 1
else puts("0"); иначе пишем 0*/
//Проверка на составное число
#include <stdio.h>

int main() {
    int a;
    printf("Проверка на составное число\n1-простое 0-составное\n");
    printf("Введите число a: ");
    scanf("%d", &a);

    if (a < 2) { // Числа меньше 2 не являются простыми
        puts("0");
        return 0;
    }

    int is_prime = 1; // Предполагаем, что число простое

    // Проверяем делимость до квадратного корня из a
     for (int n = 2; n * n <= a; n++) {
        if (a % n == 0) {
            is_prime = 0;
            break;
        }
    }

    // Выводим результат
    if (is_prime)
        puts("1"); // a — простое число
    else
        puts("0"); // a — составное число

    return 0;
}
